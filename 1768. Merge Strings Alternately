class Solution {
public:
    string mergeAlternately(string word1, string word2) {
        int n=word1.size();
          int m=word2.size();
          string s="";
          int i=0;
          int j=0;
          while(n>i || m>j )
          {
              if(i!=n)
             
             {s=s+word1[i];
             i++;
             }
             if(j!=m)
             {s=s+word2[j];
             j++;
             }
            

          }
          return s;
          ///////////////////////////////          another aproach of merge sort like that
        // int n = word1.length();
        // int m = word2.length();
        // int i = 0, j = 0;
        // string ans = "";
        // while(i < n && j < m) {
        //     ans += word1[i];
        //     ans += word2[j];
        //     i++;
        //     j++;
        // }
        // while(i < n) {
        //     ans += word1[i];
        //     i++;
        // }
        // while(j < m) {
        //     ans += word2[j];
        //     j++;
        // }
        // return ans;
        
    }
};
